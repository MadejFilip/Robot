<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane minHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.epam.ja.kmw.controller.MainLayoutController">
   <children>
      <BorderPane layoutX="176.0" layoutY="183.0" prefHeight="600.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </BorderPane.margin>
               <children>
                  <DatePicker fx:id="datePicker" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin></DatePicker>
                  <ButtonBar prefHeight="40.0" prefWidth="327.0" HBox.hgrow="ALWAYS">
                    <buttons>
                        <Button fx:id="showBooksByDateButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="157.0" text="Show Books" />
                        <Button fx:id="editBookStoreButton" mnemonicParsing="false" onAction="#handleEditBookStore" text="Edit Bookstore" />
                      <Button fx:id="addBookStoreButton" mnemonicParsing="false" onAction="#handleAddBookStore" text="Add Bookstore" />
                        <Button mnemonicParsing="false" onAction="#handleDelBookStore" text="Del Bookstore" />
                    </buttons>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </ButtonBar>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
